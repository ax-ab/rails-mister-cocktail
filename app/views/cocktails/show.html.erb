<h1>Cocktails#show</h1>
<h2><%= @cocktail.name %></h2>
<%= cl_image_tag @cocktail.user_image, height: 100, width: 100, crop: :fill %>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.ingredient.name %> (<%= dose.description %>)
      <%= link_to "Delete dose", dose_path(dose), method: :delete %>
      <%= link_to "Edit dose", edit_dose_path(dose) %>
    </li>
  <% end %>
</ul>
<br>
<h1>Add dose</h1>
<%= render './doses/form_new_dose' %>

<hr>
<%= link_to "Back to index", cocktails_path  %>
