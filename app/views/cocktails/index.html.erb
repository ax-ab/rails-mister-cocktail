<h1>Cocktails#index</h1>

<div>
  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <% ran_num = rand(2..4) %>

        <a class="col-<%= ran_num %> border" style="background-image: url('<%= cocktail.user_image %>'); background-size: cover; height: 200px" href="cocktails/<%= cocktail.id %>">

          <%= cocktail.name %>
        </a>
      <% end %>
    </div>
  </div>
</div>

<hr>
<%= link_to "Add new cocktail", new_cocktail_path %>

